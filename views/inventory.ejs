<%- include('partials/header') %>
<h2>Inventory List</h2>
<a href="/inventory/add" class="btn btn-success mb-3">Add New Item</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(item => { %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.description %></td>
            <td>
                <a href="/inventory/edit/<%= item._id %>" class="btn btn-warning">Edit</a>
                <a href="/inventory/delete/<%= item._id %>" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<%- include('partials/footer') %>
